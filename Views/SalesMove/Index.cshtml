@using OnlineCommercialAutomation.Models;
@model List<SalesMove>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br>
<h2>Satış</h2>
<br>
<table id="saleIndexTbl" class="table table-striped">
    <thead>
        <tr>
            <th>Satış ID</th>
            <th>Ürün</th>
            <th>Müşteri</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih</th>
            <th>Güncelle</th>
            <th>Detaylar</th>
        </tr>
    </thead>
    @foreach(var sales in Model)
    {
        <tr>
            <td>@sales.SalesId</td>
            <td>@sales.Product.ProductName</td>
            <td>@sales.Customer.CustomerName @sales.Customer.CustomerLastName</td>
            <td>@sales.Employee.EmployeeName @sales.Employee.EmployeeLastName</td>
            <td>@sales.Quantity</td>
            <td>@sales.UnitPrice</td>
            <td>@sales.TotalAmount</td>
            <td>@sales.Date</td>
            <td>
                <a href="/SalesMove/GetSales/@sales.SalesId" class="btn btn-success">Güncelle</a>
            </td>
            <td>
                <a href="/SalesMove/SaleDetail/@sales.SalesId" class="btn btn-info">Detaylar</a>
            </td>
        </tr>
    }
</table>
<br>
<a href="/SalesMove/AddSale" class="btn btn-info">Yeni Satış Ekle</a>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#saleIndexTbl').dataTable({});
</script>

